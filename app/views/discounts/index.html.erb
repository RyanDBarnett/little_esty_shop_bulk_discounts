<body>
  <div class="row">
    <p class='col-12'>Merchant Discounts</p>
  </div>

  <%= link_to 'Create New Discount', new_merchant_discount_path(@merchant.id) %>

  <ul>
    <% @merchant.discounts.each do |discount| %>
      <li id="discount-<%= discount.id %>-container">
        <%= link_to discount.name, merchant_discount_path(@merchant.id, discount.id) %>
        <p>Percentage Discount: <%= discount.percentage_discount %></p>
        <p>Quantity Threshold: <%= discount.quantity_threshold %></p>
        <%= link_to 'Delete', merchant_discount_path(@merchant.id, discount.id), method: :delete, remote: false %>
      </li>
    <% end %>
  </ul>
</body>
